<%= render "notifications/success" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <h1 class="text-center my-4">List of articles</h1>
    <% @categories.each do |category| %>
      <div class="card text-center my-3">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          <%= link_to "View", category_path(category), class: "btn btn-success" %>
          <%= link_to "Edit", edit_category_path(category), class: "btn btn-primary" %>
          <%= link_to "Delete", category_path(category), data: {turbo_method: :delete}, class: "btn btn-danger" %>
        </div>
        <div class="card-footer text-muted">
          created at <%= category.created_at.year %>-<%= category.created_at.month %>-<%= category.created_at.day %> and updated at <%= category.updated_at.year %>-<%= category.updated_at.month %>-<%= category.updated_at.day %>
        </div>
      </div>
    <% end %>

    <%#= paginate @articles %>

  </div>
</div>